.top {
    height: 100%;
}

.top .header {
    padding: 0 20rpx;
}

.top .header button {
    text-align: center;
    vertical-align: middle;
    touch-action: manipulation;
    cursor: pointer;
    background-image: none;
    white-space: nowrap;
    user-select: none;
    font-size: 14px;
    border-radius: 34px;
    border: 0 !important;
    position: relative;
    text-decoration: none;
    color: #fff !important;
    background: #dcd6d0 !important;
    color: #495060 !important;
    box-shadow:inset 0 0 0 1px rgba(73, 80, 96, 0.1);
    margin: 10px;
}

.top .header button.active {
    color: #fff !important;
    background: #333333 !important;
}


.top .scrollView .list {
    margin: 30rpx;
    background: #fff;
    border-radius: 10rpx;
    height: 104rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
}

.top .scrollView .list .index {
    font-size: 36rpx;
    padding-left: 10rpx;
    width: 60rpx;
}

.top .scrollView .list .user {
    font-size: 32rpx;
    flex: 1;
    display: flex;
    flex-direction: row;
    align-items: center;

}

.top .scrollView .list image {
    height: 60rpx;
    width: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.top .scrollView .list .times {
    width: 208rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    padding-right: 20rpx;
}

.top .scrollView .list .time-num {
    font-size: 50rpx;
}


.top .scrollView .list .time-num,
.top .scrollView .list .cut {
    color: #ce503e;
}

.top .scrollView {
    height: 100%;
}

.top .myscroll {
    height: calc(100vh - 130rpx);
}